<% if @guide.errors.any? %>
  <ul>
    <%@guide.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for @guide do |f| %>
  <%= f.input :name, label: false, input_html: { placeholder: "Enter the name of your guide board" } %>
  <%= f.input :place, label: false, input_html: { id: :user_input_autocomplete_address } %>
  <%= f.input :photo, label: false, as: :hidden %>
  <%= f.input :gphoto, as: :hidden %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

