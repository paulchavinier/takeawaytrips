<%= simple_form_for @guide, html: { class: 'card-autocomplete-form'} do |f| %>
  <%= f.input :name, label: false, input_html: { placeholder: "Enter the name of your guide board" } %>
  <%= f.input :place, label: false, input_html: { id: :user_input_autocomplete_address, placeholder: "Enter a place" } %>
  <%= f.input :photo, label: false, as: :hidden %>
  <%= f.input :gphoto, as: :hidden %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "newguidebtn", value: "Ok" %>
<% end %>

