$('.card-filters .category').removeClass("active");

<% if @category %>
  $('.card-filters .category--<%= @category.downcase %>').addClass("active");
<% end %>

$('#guide-cards').html('<%= j render "shared/cards", cards: @cards %>');
$('#total-places').html('<%= name = @guide.user.first_name + " " + @guide.user.last_name + "#{name} places (" + @cards.count.to_s + ")" %>');
