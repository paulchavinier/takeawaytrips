<div class="banner-guide-board">
<%="Inspirez vous de vos amis"%>
</div>
<div class="container">
<% if @guide.friendlist_filtered != [] %>
  <h4 class="text-center"> <%="Voici les amis qui ont aussi créé des guides sur le pays qui vous intéresse. ( "+@guide.guide_country+" )"%></h4>
<% else %>
  <h4 class="text-center"><%="Malheureusement, aucun ami n'a pour l'instant créé de guide sur le pays qui vous intéresse. ( "+@guide.guide_country+" )"%></h4>
  <h4>
    <%= link_to "Retour à mon guide", guide_path(@guide) %>
  </h4>
<% end %>

<% @guide.friendlist_filtered.each do |user| %>
<% if user != nil %>
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
<div class="cardfriend">
<%= link_to "", friend_guides_list_path(user.uid), class: "linkf" %>
  <div class="headerfriend" style="background-image: url(<%= image_path (user.picture) %>)">
  <p><%= full_name = user.first_name + " " + user.last_name%></p>
  </div>
  <div class="footerfriend">
  <div class="guidesize">
    <h1>Guides</h1>
    <p><%= user.guides.size %></p>
    </div>
    <div class="cardsize">
    <h1>Spots</h1>
     <p><%= user.cards.size %></p>
    </div>
    </div>
  </div>
  </div>
<% end %>
<% end %>
</div>
