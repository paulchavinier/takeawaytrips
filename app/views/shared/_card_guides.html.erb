
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
    <div class="box-guides" id="box" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%), url(<%= cl_image_path guide.choosephoto %>)">
    <%= link_to "", guide_path(guide), class: "card-link" %>
      <div class="title-guides">
        <%= guide.name.upcase %>
      </div>
      <div class="privacy-info">
        <% if guide.privacy == nil || guide.privacy == "facebook" %>
          <i class="fa fa-users" aria-hidden="true"></i>
        <% elsif guide.privacy == "private" %>
          <i class="fa fa-lock" aria-hidden="true"></i>
        <% else %>
          <i class="fa fa-globe" aria-hidden="true"></i>
        <%end%>
      </div>
      <div class="infos-guides">
        <i class="fa fa-map-marker" aria-hidden="true"></i> <%= guide.cards.size %>
      </div>
      <% if current_user == guide.user %>
      <div class="edit-guides">
        <%= link_to guide_path(guide), method: :delete do %>
          <i class="fa fa-trash" aria-hidden="true" style="color:#272822"></i>
        <%end%>
        <br>
        <%= link_to "", data: {toggle: "modal", target: "#editguideModal_#{guide.id}"} do %>
          <i class="fa fa-pencil" aria-hidden="true" style="color:#3287C2"></i>
        <% end %>
      </div>
      <% end %>
    </div>

  </div>




