<% @cards.each do |card| %>
  <div class="col-xs-12 col-md-4">
    <div class="border">
      <h2>Card</h2>
      <p><%= card.guide_id %></p>
      <p><%= card.name %></p>
      <p><%= card.category %></p>
      <p><%= card.personnal_note %></p>
      <p><%= card.formatted_address %></p>
      <p><%= card.international_phone_number %></p>
      <p><%= card.website %></p>
      <% if card.opening_hours %>
        <% card.opening_hours.each do |day| %>
        <p><%= day %></p>
        <% end %>
      <% end %>
      <p><%= card.price_level %></p>
      <%= link_to 'Edit', edit_card_path(card) %> |
      <%= link_to 'Delete', card, method: :delete %> |
      <%= link_to 'Show', card %>
    </div>
  </div>
<% end %>
