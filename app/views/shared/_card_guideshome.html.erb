<!-- Code pour les cartes des guides publics sur la home -->

  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
    <div class="box-guides" id="box" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%), url(<%= image_path guide.choosephoto %>)">
    <%= link_to "", guide_path(guide), class: "card-link" %>
      <div class="title-guides">
        <%= guide.name.upcase %>
      </div>
      <div class="privacy-info">
        <% if guide.privacy == nil || guide.privacy == "facebook" || guide.privacy == "" %>
          <% if current_user == guide.user %>
            <i class="fa fa-users" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Seulement vos amis et vous peuvent consulter ce guide"></i>
          <% else %>
            <i class="fa fa-users" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title= "<%= "#{guide.user.first_name}"+" partage ce guide avec ses amis seulement"%>"></i>
          <% end %>
        <% elsif guide.privacy == "private" %>
          <% if current_user == guide.user %>
          <i class="fa fa-lock" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Vous seul pouvez consulter ce guide"></i>
          <% else %>
          <i class="fa fa-lock" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title= "<%= "#{guide.user.first_name}"+" ne souhaite pas partager ce guide"%>"></i>
          <% end %>
        <% else %>
          <% if current_user == guide.user %>
          <i class="fa fa-globe" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Tous les utilisateurs de TAT peuvent consulter ce guide"></i>
          <% else %>
          <i class="fa fa-globe" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title= "<%= "#{guide.user.first_name}"+" partage ce guide avec tous les utilisateurs de TAT"%>"></i>
          <% end %>
        <%end%>
      </div>
      <div class="infos-guides">
        <i class="fa fa-map-marker" aria-hidden="true"></i> <%= guide.cards.size %>
      </div>
      <div class="avatar-public" data-toggle="tooltip" data-placement="bottom" title= "<%= "Ce guide a été réalisé et rendu public par "+"#{guide.user.first_name}"%>">
        <%= image_tag(guide.user.picture, class: "avatar") %>
        <div class="badge badge-blog">B</div>
      </div>

    </div>

  </div>




