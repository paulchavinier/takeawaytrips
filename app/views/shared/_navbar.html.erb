<div class="navbar-wagon <%= params[:action] == 'home' ? 'navbar-wagon-fixed' : '' %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logosigle.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Search form -->
    <!-- <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%# link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
       <!--  <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div> -->
      <%#end %>

      <!-- Profile picture and dropdown -->
      <button type="button" class="navbar-wagon-button1">
               <%= link_to "Mes Guides", guides_path %>
      </button>
      <button type="button" class="navbar-wagon-button1" style="margin-right : 40px;">
               <%= link_to "Amis", friends_path %>
      </button>

      <div class="navbnavbar-wagonar-wagon-item">
        <div class="dropdown">
          <div class="user-initials dropdown-toggle" id= "navbar-wagon-menu", data-toggle= "dropdown">
            <span><%= current_user.initials %></span>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to guides_path do %>
                <i class="fa fa-map"></i> <%= t ".guides", default: "Mes Guides" %>
              <% end %>
            </li>
            <li>
              <%= link_to friends_path do %>
                <i class="fa fa-group"></i> <%= t ".friends", default: "Mes Amis" %>
              <% end %>
            </li>
            <% if current_user.admin %>
              <li>
                <%= link_to rails_admin_path do %>
                  <i class="fa fa-gears"></i>  <%= t ".admin", default: "Admin" %>
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <button type="button" class="navbar-wagon-button1" data-toggle="modal" data-target="#modalsignup">
               Login
      </button>


    <% end %>

    <!-- Button (call-to-action) -->
  </div>

  <!-- Dropdown list appearing on mobile only [REMOVED]-->

</div>

<!-- Modal -->
<%= render 'shared/modalsignup' %>

