<% if current_user != nil %>
  <%= simple_form_for card, url: update_card_path(card), html: { class: 'edit-form'} do |f| %>
    <%= f.input :name, as: :hidden %>
    <%= f.input :personnal_note, as: :hidden %>
    <%= f.input :gphoto, as: :hidden %>
    <%= f.input :category, as: :hidden %>
    <%= f.input :formatted_address, as: :hidden %>
    <%= f.input :website, as: :hidden %>
    <%= f.input :international_phone_number, as: :hidden %>
    <%= f.input :price_level, as: :hidden %>
    <%= f.input :rating, as: :hidden %>
    <%= f.input :opening_hours, as: :hidden, input_html: { value: card.opening_hours ? card.opening_hours.join(",") : nil } %>
    <%= f.input :latitude, as: :hidden %>
    <%= f.input :longitude, as: :hidden %>
    <%= f.input :photo, as: :hidden %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :guide_id, label: false, :include_blank => "Choose your existing guide", collection: current_user.guides %>
    <%= f.submit  class: "btn btn-primary", id: "add-card-button", input_html:{class:""}, value: "Ok" %>
  <% end %>
<% else %>
  <%= simple_form_for card, url: update_card_path(card), html: { class: 'edit-form'} do |f| %>
    <%= f.input :name, as: :hidden %>
