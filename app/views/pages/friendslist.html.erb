<% @users.each do |user| %>
<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
<div class="cardfriend">
<%= link_to "", friend_guides_list_path(user.uid), class: "linkf" %>
  <div class="headerfriend" style="background-image: url(<%= image_path (user.picture) %>)">
  <p><%= full_name = user.first_name + " " + user.last_name%></p>
  </div>
    <p>Guides: <%= user.guides.size %></p>
    <p>Cards: <%= user.cards.size %></p>
  </div>
  </div>
<% end %>

